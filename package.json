{
  "name": "mexc-integrated-trading",
  "version": "1.0.0",
  "description": "Минимальный клиент MEXC Spot (buy/sell/cancel)",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "ts-node -r dotenv/config src/main.ts",
    "grid": "ts-node -r dotenv/config src/main-grid.ts",
    "test-all": "node test_all_components.js",
    "test-llm": "node test_llm_api.js",
    "test-telegram": "node test_telegram.js",
    "pm2:start": "./start_pm2.sh",
    "pm2:stop": "./stop_pm2.sh",
    "pm2:status": "./status_pm2.sh",
    "pm2:logs": "npx pm2 logs mexc-paper-trading",
    "pm2:restart": "npx pm2 restart mexc-paper-trading",
    "pm2:monit": "npx pm2 monit"
  },
  "keywords": [
    "mexc",
    "spot",
    "trading",
    "client"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "openai": "^5.20.3",
    "pino": "^8.16.2",
    "pino-pretty": "^13.1.1",
    "pm2": "^5.3.0",
    "telegraf": "^4.16.3",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/ws": "^8.5.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
