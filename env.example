# MEXC API Configuration
MEXC_API_KEY=your_mexc_api_key_here
MEXC_SECRET_KEY=your_mexc_secret_key_here
MEXC_BASE_URL=https://api.mexc.com
MEXC_WS_URL=wss://wbs.mexc.com/ws

# Database
DATABASE_PATH=./data/mexc_bot.db

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/mexc_bot.log

# Bot Configuration
CONFIG_FILE=./config/defaults.ethusdc.json
SYMBOL=ETH/USDC
DEPOSIT_USD=100

# Risk Management
ENABLE_TRADING=true
DRY_RUN=false

# Order Placement & Guards
TICK_SIZE=0.01
STEP_SIZE=0.000001
MIN_NOTIONAL=1
MIN_QTY=0
ORDER_NOTIONAL_USD=1.5
MAKER_GUARD_GAP_TICKS=1
TTL_MS=45000
DELTA_TICKS=3
CANCEL_RATE_PER_MIN=30

# Dashboard
DASHBOARD_PORT=3000
ENABLE_DASHBOARD=true

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_SECRET_KEY=your_secret_key_for_auth
TELEGRAM_ADMIN_CHAT_IDS=123456789,987654321 

# MEXC REST timing
MEXC_RECV_WINDOW=60000
# Repricing throttle
REPRICE_MIN_INTERVAL_MS=15000
# Auto seed base inventory for SELLs (spot requires ETH)
AUTO_SEED_ETH=false
SEED_BASE_USD=10
